<div class="container">
  <h1><strong><%= @restaurant.name %></strong></h1> <p><%= @restaurant.category %></p>
  <p class= "text-muted">Located in <%= @restaurant.address %></p>
  <p>Contact: <%= @restaurant.phone_number %></p>
  <h3><strong>Reviews</strong></h3>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> Rating: <%= review.rating %>/5</li>
      <li class="list-group-item">
        <%= link_to "Delete",
          review_path(review),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </li>
    <% end %>
  <h3 class="mt-3">New review</h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit "Submit review", class: "btn btn-outline-primary mb-3" %>
  <% end %>
  </ul>
</div>
